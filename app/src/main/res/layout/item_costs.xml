<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/items_margin"
    android:layout_marginLeft="@dimen/items_mrg"
    android:layout_marginRight="@dimen/items_mrg"
    android:minHeight="@dimen/items_minHeight"
    android:background="@drawable/item_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        style="@style/ItemCostStyle"
        android:paddingLeft="@dimen/item_name_pad_left"
        android:textSize="@dimen/item_name_text_size"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/item_name"/>

    <TextView
        style="@style/ItemCostStyle"
        android:padding="@dimen/item_cost_padding"
        android:layout_weight="0"
        android:textSize="@dimen/item_cost_text_size"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/item_color_shadow"
        android:id="@+id/item_cost"/>
</LinearLayout>
