<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_auth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/auth_backgraund"
    tools:context="com.example.khokhlovart_loftschool.moneytracker.AuthActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/auth_logo_pad_top"
        android:id="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/auth_info_text_size"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/white_text"
        android:gravity="center_horizontal"
        android:text="@string/auth_info"
        android:layout_marginTop="@dimen/auth_info_marTop"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gplus_button"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="@dimen/auth__btn_enter_top_mrg"
        android:id="@+id/btn_auth"
        android:layout_centerHorizontal="true"
        android:background="@null"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_intro"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
