<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_auth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/auth_backgraund"
    tools:context="com.example.khokhlovart_loftschool.moneytracker.AuthActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp"
        android:id="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/auth_info_text_size"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/white_text"
        android:gravity="center_horizontal"
        android:text="@string/auth_info"
        android:layout_marginTop="@dimen/auth_info_marTop"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.CardView
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="55dp"
        app:cardBackgroundColor="@color/white_text"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="27dp"
        android:id="@+id/btn_auth"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            >

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    app:backgroundTint="@color/auth_btn_g"
                    android:clickable="false"
                    app:elevation="0dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_delete_white_24dp"
                    android:layout_marginLeft="26dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/g_plus"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/auth_enter_text_size"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="@color/auth_backgraund"
                    android:layout_centerVertical="true"
                    android:text="ВОЙТИ"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/g_plus"

                    />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_intro"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
